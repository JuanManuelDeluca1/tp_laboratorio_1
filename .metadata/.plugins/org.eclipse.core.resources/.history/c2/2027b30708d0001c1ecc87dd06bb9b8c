#define TAMM 5
#define TAMC 5
#define TAML 4

int main(void)
{
	setbuf(stdout,NULL);
	char salir;
	eMarcas marcas[TAMM] =
	{
		{1000, "Renault"},
		{1001, "Ford"},
        {1002, "Chevrolet"},
	    {1003, "Fiat"},
	    {1004, "Peugeot"}

	};
