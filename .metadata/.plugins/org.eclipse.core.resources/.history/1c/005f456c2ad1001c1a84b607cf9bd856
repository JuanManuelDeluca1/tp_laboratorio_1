#include <stdio.h>
#include <stdlib.h>

int menu()
{
	int opcion;
	printf("A) Alta de avion\n");
	printf("B) Modificar avion\n");
	printf("C) Baja de avion\n");
	printf("D) Listar aviones\n");
	printf("E) Listar aerolinea\n");
	printf("F) Listar tipos\n");
	printf("G) Listar destino\n");
	printf("H) Alta vuelo\n");
	printf("I) Listar vuelos\n");
	printf("J) Salir\n");
	printf("Ingrese una opcion: \n");
	scanf("%d", &opcion);

	return opcion;
}

void confirmarSalida(char* p)
{
	char confirmar;
	printf("Confirmar salida?:");
	fflush(stdin);
	scanf("%c", &confirmar);

	*p = confirmar;
}

int opcionesCambio()
{
	int opcion;
	printf("1) Cambiar nombre\n");
	printf("2) Cambiar apellido\n");
	printf("3) Cambiar precio\n");
	printf("4) Cambiar codigo de vuelo\n");
	printf("5) Cambiar tipo de pasaje\n");
	printf("6) Cambiar estado de vuelo\n");
	printf("7) Salir\n");
	printf("Ingrese una opcion: ");
	scanf("%d", &opcion);

	return opcion;
}
