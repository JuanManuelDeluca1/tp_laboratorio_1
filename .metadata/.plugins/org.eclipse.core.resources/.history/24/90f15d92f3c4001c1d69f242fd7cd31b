#include <stdio.h>
#include <stdlib.h>
#include <string.h>

#include "ArrayPassenger.h"

int agregaPasajero(Pasajeros* vec, int tam, int id, char nombre[], char apellido[], float precio,
		char codigoVuelo[], int tipoPasajero,int estadoVuelo, int isEmpty)
{
	int todoOk = 0;
	if(vec != NULL && tam > 0)
	{
		for(int i=0;i<tam;i++)
		{
			 printf("Ingrese el nombre del pasajero: ");
			 fflush(stdin);
             gets(nombre);

             while(strlen(nombre) >= 51)
             {
            	 printf("Nombre demasiado largo. Reingrese nombre: ");
	             fflush(stdin);
                 gets(nombre);
			  }
			  strcpy(vec[i].nombre, nombre);

			  printf("Ingrese el apellido del pasajero: ");
			  fflush(stdin);
			  gets(apellido);

			  while(strlen(apellido) >= 51)
              {
			   	  printf("Apellido demasiado largo. Reingrese Apellido: ");
			      fflush(stdin);
			      gets(apellido);
			  }
			  strcpy(vec[i].apellido, apellido);

			  printf("Ingrese precio: ");
			  fflush(stdin);
			  scanf("%f", &precio);

			  vec[i].precio = precio;

			  printf("Ingrese codigo del vuelo: ");
			  fflush(stdin);
			  gets(codigoVuelo);

			  while(strlen(codigoVuelo) >= 10)
			  {
				  printf("Codigo del vuelo demasiado largo. Reingrese apellido");
				  fflush(stdin);
				  gets(codigoVuelo);
			  }
			  strcpy(vec[i].codigoVuelo, codigoVuelo);

			  printf("Ingrese la clase del aciento (1(prime)/2(media)/3(turista))): ");
			  fflush(stdin);
			  scanf("%d", &tipoPasajero);

			  while(tipoPasajero > 3 || tipoPasajero < 0)
			  {
				  printf("clase inexistente (1(prime)/2(media)/3(turista))): ");
				  fflsuh(stdin);
				  scanf("%d", &tipoPasajero);
			  }

			  vec[i].tipoPasajero = tipoPasajero;

			  printf("Ingrese el estado del vuelo (1(no despego)/2(en vuelo)/3(aterriso)): ");
			  fflsuh(stdin);
			  scanf("%d", &estadoVuelo);

			  while(estadoVuelo > 3 || estadoVuelo < 0)
			  {
				  printf("Ingrese el estado del vuelo (1(no despego)/2(en vuelo)/3(aterriso)): ");
				  fflsuh(stdin);
				  scanf("%d", &estadoVuelo);
			  }

			  vec[i].estadoVuelo = estadoVuelo;

		}
	}
	return todoOk;
}




