#include <stdio.h>
#include <stdlib.h>

#include "menu.h"

int main(void)
{
	char salir;
	do
	{
		switch(menu())
		{
		case 1:
			confirmarsalida(&salir);
		break;
		default:
		     printf("Opcion Invalida!\n\n");
		}
	system("pause");

	}while(salir != 's');

	return 0;
}
