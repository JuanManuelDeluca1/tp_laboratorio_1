#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include "Vuelos.h"



int listarVuelos(eVuelos vuelos[], int tam){
int todoOk = 0;

    if(vuelos != NULL && tam > 0){
     // system("cls");
        printf("   *** Lista de Destino  ***\n");
        printf("  Id    Descripcion    Precio\n");
        printf("-----------------------\n");
        for(int i=0; i < tam; i++){
            printf("   %4d    %s    $%.2f\n", vuelos[i].id, vuelos[i].descripcion, vuelos[i].precio);
        }
        printf("\n\n");
        todoOk = 1;
    }
 return todoOk;
}

int cargarDescripcionVuelos(eDestino vuelos[], int tam, int id, char descripcion[]){
int todoOk = 0;
int indice;

    buscarVuelos(vuelos,tam, id,&indice);

    if(vuelos != NULL && indice != -1 ){
       strcpy(vuelos, vuelos[indice].descripcion);
       todoOk = 1;
    }
  return todoOk;
}

int buscarVuelos(eDestino vuelos[], int tam, int id, int* pIndice){
    int todoOk = 0;
    if(vuelos!= NULL && tam > 0 && pIndice != NULL){
            *pIndice = -1;
            for(int i=0; i < tam; i++){
                if(vuelos[i].id == id){
                    *pIndice = i;
                    break;
                }
            }
        todoOk = 1;
    }
    return todoOk;
}

int validarVuelos(eDestino vuelos[], int tam, int id){
    int esValido = 0;
    int indice;

    buscarVuelos(vuelos, tam, id, &indice);

    if(indice != -1){
        esValido = 1;
    }
    return esValido;
}



