#include <stdio.h>
#include <stdlib.h>

#include "color.h"

void mostrarColores(eColores e)
{

    printf("%d      %s\n", e.id, e.descripcion);

}


int listarColores(eAuto vec[], int tam)
{
    int todoOk = 0;
    if(vec != NULL && tam > 0)
    {
        //system("cls");
        printf("          *** Listado de colores ***\n\n");
        printf("id    descripcion\n");
        printf("-----------------------------------------------------\n");
        for(int i=0; i < tam; i++)
        {
        	if(!vec[i].isEmpty)
        	{
        		mostrarColores(vec[i]);
        	}
        }
        printf("\n\n");

        todoOk = 1;
    }
    return todoOk;
}
