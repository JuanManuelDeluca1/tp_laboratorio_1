#include <stdio.h>
#include <stdlib.h>



int menu()
{
    int opcion;

        system("cls");
        printf("  *** Menu de Opciones ***\n\n");
        printf("1- Saludar\n");
        printf("2- Brindar\n");
        printf("3- Despedir\n");
        printf("4- Salir\n\n");
        printf("Ingrese opcion: ");
        scanf("%d", &opcion);

        system("cls");

        return opcion;
}
void confirmarSalida(char* p){
    char confirma;
    printf("Confirma salida?: ");
    fflush(stdin);
    scanf("%c", &confirma);

    // asigno el valor de la variable confirma a la variable salir de main
    // a traves de p que recibe la direccion de salir
    *p = confirma;

}
