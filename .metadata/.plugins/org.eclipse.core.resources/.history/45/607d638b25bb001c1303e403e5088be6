#include <stdio.h>
#include <stdlib.h>
#define TAM 5

int mostrarEntero(int* vec, int tam);
int cargarVector(int* vec, int tam);
int sumarEntero(int* vec, int tam, int* pTotal);
int promediarEntero(int* vec, int tam, int* pTotal);

int main(void)
{
	setbuf(stdout,NULL);
	int numeros[TAM];
	int suma;
	int promedio;

	cargarVector(numeros, TAM);
	mostrarEntero(numeros, TAM);
	sumarEntero(numeros, TAM, &suma);
	promediarEntero(numeros, TAM, &promedio);


	return 0;
}

int cargarVector(int* vec, int tam)
{
	int todoOk = 0;
	if(vec != NULL && tam > 0)
	{
		for(int i = 0; i<tam; i++)
		{
			printf("ingrese un numero:");
			scanf("%d", &vec[i]);

			}
		todoOk=1;
	}
	return todoOk;
}

int mostrarEntero(int* vec, int tam)
{
	int todoOk = 0;
	for(int i=0;i<tam;i++)
	{
		printf("%d", vec[tam-1-i]);
	}
	/*for(i=TAM-1;i>0-1;i--)
	{
		printf("%d", numeros[i]);
	}*/
	if(vec != NULL && tam > 0)
	{
		todoOk=1;
	}

	return todoOk;
}
int sumarEntero(int* vec, int tam, int* pTotal)
{
	int todoOk = 0;
	*pTotal = 0;
	if(vec != NULL && tam > 0 && pTotal != NULL)
	{
		for(int i=0; i<tam; i++)
		{
			*pTotal+=vec[i];
		}
		todoOk=1;
	}
	printf("\nla suma es: %d\n", *pTotal);
	return todoOk;
}
int promediarEntero(int* vec, int tam, int* pTotal)
{
	int todoOk = 0;
	int i;
	*pTotal = 0;
	if(vec != NULL && tam > 0 && pTotal != NULL)
	{
		for(i=0; i<tam; i++)
		{
			*pTotal+=vec[i];
		}
		todoOk=1;
		*pTotal = *pTotal/i;
	}
	printf("el promedio es: %d\n", *pTotal);
	return todoOk;
}
