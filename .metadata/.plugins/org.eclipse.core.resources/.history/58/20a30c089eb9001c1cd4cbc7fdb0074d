#include <stdio.h>
#include <stdlib.h>
#define TAM 5

int main(void)
{
	setbuf(stdout,NULL);
	int i;
	int numeros[TAM];
	int numeroMayor;
	int contadorMayor = 0;
	for(i = 0; i<TAM; i++)
	{
		printf("ingrese un numero:");
		scanf("%d", &numeros[i]);
		;
	}
	for(i=0; i<TAM; i++)
	{
		if(i==0 || numeros[i] >= numeroMayor)
		{
			numeroMayor = numeros[i];
		}
		if(numeros[i]== numeroMayor)
		{
			contadorMayor++;
		}
	}

	printf("el numero mayor es %d y se repite: %d\n", numeroMayor, contadorMayor);


	return 0;
}
