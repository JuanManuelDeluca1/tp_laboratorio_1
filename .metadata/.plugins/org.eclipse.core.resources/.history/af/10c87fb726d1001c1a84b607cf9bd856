#include <stdio.h>
#include <stdlib.h>

#include "menu.h"
#include "Tipo.h"
#include "Aerolinea.h"
#include "Avion.h"

#define TAMA 300
#define TAMT 300
#define TAMAE 5

int main(void)
{
	setbuf(stdout,NULL);
	char salir;
	int flagCarga = 0;
	int indice;
	eAvion aviones[300];
	eTipo tipo[TAMT] =
	{
	   {5000, "Sistemas"},
	   {5001, "RRHH"},
	   {5002, "Contable"},
	   {5003, "Legales"},
	   {5004, "Ventas"}
	};

	eAerolinea aerolinea[TAMAE] =
	{
	   {1000, "Lan", 500},
	   {1001, "Iberia", 600},
	   {1002, "Norwegian", 450},
	   {1003, "American", 650},
	   {1004, "Austral",  550}
	};
	do
		{
			switch(menu())
			{
				case 1:
					if(flagCarga == 0)
					{
						inicializarAvion(aviones, TAMA);
						buscarAvionLibre(aviones, TAMA, indice);
					}
					if(flagCarga == 1)
					{
						altaAvion(aviones, TAMA, indice);
					}
					else
					{
						printf("no cagrgo");
					}
				break;
				case 2:
					if(flagCarga == 1)
					{
						printf("cagrgo");
					}
					else
					{
						printf("debe cargar un pasajero primero\n\n");
					}
				break;
				case 3:
					if(flagCarga == 1)
					{
						printf("cagrgo");
					}
					else
					{
						printf("debe cargar un pasajero primero\n\n");
					}
				break;
				case 4:
					if(flagCarga == 1)
					{
						printf("cagrgo");
					}
					else
					{
						printf("debe cargar un pasajero primero\n\n");
					}
				break;
				case 5:
					if(flagCarga == 0)
					{
						printf("cagrgo");
					}
					if(flagCarga == 1)
					{
						printf("cagrgo");
					}
					else
					{
						printf("problema al agregar pasajero\n");
					}
				break;
				case 6:
					if(flagCarga == 1)
					{
						printf("cagrgo");
					}
					else
					{
						printf("debe cargar un pasajero primero\n\n");
					}

				break;
				case 7:
					if(flagCarga == 1)
					{
						printf("cagrgo");
					}
					else
					{
						printf("debe cargar un pasajero primero\n\n");
					}

				break;
				case 8:
					if(flagCarga == 1)
					{
						printf("cagrgo");
					}
					else
			        {
						printf("debe cargar un pasajero primero\n\n");
					}

				break;
				case 9:
					if(flagCarga == 1)
					{
						printf("cagrgo");
					}
					else
					{
						printf("debe cargar un pasajero primero\n\n");
					}

				break;
				case 10:
					confirmarSalida(&salir);
				break;
				default:
					printf("opcion Invalida!\n\n");
			}
			system("pause");

		}while(salir != 's');
	return 0;
}

