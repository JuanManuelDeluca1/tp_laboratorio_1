#include <stdio.h>
#include <stdlib.h>
#define TAM 5

int mostrarEntero(int* vec, int tam);
int cargarVector(int* vec, int tam);

int main(void)
{
	setbuf(stdout,NULL);
	int i;
	int numeros[TAM];
	int numeroMayor;
	for(i = 0; i<TAM; i++)
	{
		printf("ingrese un numero:");
		scanf("%d", &numeros[i]);

	}
	for(i=0; i<TAM; i++)
	{
		if(i==0 || numeros[i] >= numeroMayor)
		{
			numeroMayor = numeros[i];
		}
	}

	mostrarEntero(numeros, TAM);

	return 0;
}

int cargarVector(int* vec, int tam)
{
	int todoOk = 0;
	if(vec != NULL && tam > 0)
	{
		for(int i = 0; i<tam; i++)
		{
			printf("ingrese un numero:");
			scanf("%d", vec[i]);

			}
		todoOk=1;
	}
	return 0;
}

int mostrarEntero(int* vec, int tam)
{
	int todoOk = 0;
	for(int i=0;i<tam;i++)
	{
		printf("%d", vec[tam-1-i]);
	}
	/*for(i=TAM-1;i>0-1;i--)
	{
		printf("%d", numeros[i]);
	}*/
	if(vec != NULL && tam > 0)
	{
		todoOk=1;
	}

	return todoOk;
}
